<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <text
                        jcr:primaryType="cq:Widget"
                        defaultValue="This is some text."
                        hideLabel="{Boolean}true"
                        name="./text"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <table
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        </rtePlugins>
                    </text>
                    <path
                        jcr:primaryType="cq:Widget"
                        name="./path"
                        regex="/^\\/content\\/training-site\\/(.)*$/"
                        regexText="Please insert a page that &quot;lives&quot; under /content/training-site"
                        roothPath="/content/training-site"
                        xtype="pathfield"/>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Widget"
                cropParameter="./image/imageCrop"
                ddGroups="[media]"
                fileNameParameter="./image/fileName"
                fileReferenceParameter="./image/fileReference"
                mapParameter="./image/imageMap"
                name="./image/file"
                requestSuffix="/image.img.png"
                rotateParameter="./image/imageRotate"
                sizeLimit="100"
                title="Image"
                xtype="html5smartimage"/>
            <tab3
                jcr:primaryType="cq:Widget"
                title="Advanced Image Properties"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        name="./image/jcr:title"
                        xtype="textfield"/>
                    <alt
                        jcr:primaryType="cq:Widget"
                        fieldDescription="(leave empty to use the title defined above)"
                        fieldLabel="Alt Text"
                        name="./image/alt"
                        xtype="textfield"/>
                    <linkURL
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Drop files or pages from the Content Finder"
                        fieldLabel="Link to"
                        name="./image/linkURL"
                        xtype="pathfield"/>
                    <description
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        name="./image/jcr:description"
                        xtype="textarea"/>
                    <size
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Size"
                        heightParameter="./image/height"
                        widthParameter="./image/width"
                        xtype="sizefield"/>
                    <resType
                        jcr:primaryType="cq:Widget"
                        ignoreData="{Boolean}true"
                        name="./image/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                </items>
            </tab3>
        </items>
    </items>
</jcr:root>
